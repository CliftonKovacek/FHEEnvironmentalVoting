# ===============================================
# Environment Configuration Template
# ===============================================
# Copy this file to .env and fill in your values
# IMPORTANT: Never commit .env file to version control
# ===============================================

# ===============================================
# Network RPC URLs
# ===============================================

# Sepolia Testnet RPC URL
# Get from: https://infura.io or https://alchemy.com
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR-PROJECT-ID

# Ethereum Mainnet RPC URL (for future production deployment)
MAINNET_RPC_URL=https://mainnet.infura.io/v3/YOUR-PROJECT-ID

# Alternative RPC providers (fallback)
# SEPOLIA_RPC_URL_BACKUP=https://eth-sepolia.g.alchemy.com/v2/YOUR-API-KEY
# MAINNET_RPC_URL_BACKUP=https://eth-mainnet.g.alchemy.com/v2/YOUR-API-KEY

# ===============================================
# Private Keys & Wallet Configuration
# ===============================================

# WARNING: NEVER share or commit your private key!
# Format: 0x followed by 64 hexadecimal characters
# Example: 0x1234567890abcdef1234567890abcdef1234567890abcdef1234567890abcdef
PRIVATE_KEY=your-private-key-here

# Deployer address (for reference, not secret)
# DEPLOYER_ADDRESS=0x...

# Admin address (can be different from deployer)
# ADMIN_ADDRESS=0x...

# ===============================================
# Etherscan API Key
# ===============================================

# Required for contract verification
# Get from: https://etherscan.io/myapikey
ETHERSCAN_API_KEY=your-etherscan-api-key-here

# ===============================================
# Gas Configuration
# ===============================================

# Gas price in gwei (leave empty for auto)
# GAS_PRICE=50

# Gas limit (leave empty for auto)
# GAS_LIMIT=5000000

# Max priority fee (EIP-1559)
# MAX_PRIORITY_FEE_PER_GAS=2

# Max fee per gas (EIP-1559)
# MAX_FEE_PER_GAS=100

# ===============================================
# Gas Reporting
# ===============================================

# Set to "true" to enable gas reporting during tests
REPORT_GAS=false

# Optional: CoinMarketCap API key for USD gas cost estimation
# Get from: https://coinmarketcap.com/api/
COINMARKETCAP_API_KEY=your-coinmarketcap-api-key-here

# Optional: Output file for gas reports
# REPORT_GAS_FILE=gas-report.txt

# ===============================================
# Contract Size Reporting
# ===============================================

# Set to "true" to check contract sizes on compilation
CONTRACT_SIZER=false

# ===============================================
# Security Configuration
# ===============================================

# Enable security audits
ENABLE_SECURITY_AUDIT=true

# Audit level (low, moderate, high, critical)
AUDIT_LEVEL=moderate

# Enable DoS protection checks
ENABLE_DOS_PROTECTION=true

# Max transaction timeout (milliseconds)
TX_TIMEOUT=120000

# Enable replay attack protection
ENABLE_REPLAY_PROTECTION=true

# ===============================================
# Access Control Configuration
# ===============================================

# Admin role address
ADMIN_ROLE_ADDRESS=0x...

# Pauser role address
PAUSER_ROLE_ADDRESS=0x...

# Emergency contact address
EMERGENCY_CONTACT=0x...

# Time lock duration (seconds) for sensitive operations
TIMELOCK_DURATION=86400

# Multi-sig threshold (if using multi-sig)
MULTISIG_THRESHOLD=2

# Multi-sig signers (comma-separated)
# MULTISIG_SIGNERS=0x...,0x...,0x...

# ===============================================
# Rate Limiting & DoS Protection
# ===============================================

# Maximum proposals per user per day
MAX_PROPOSALS_PER_DAY=5

# Minimum time between proposals (seconds)
MIN_PROPOSAL_INTERVAL=3600

# Maximum active proposals
MAX_ACTIVE_PROPOSALS=100

# Vote rate limit (votes per hour)
MAX_VOTES_PER_HOUR=50

# ===============================================
# Performance Configuration
# ===============================================

# Enable compiler optimizations
OPTIMIZER_ENABLED=true

# Optimizer runs (higher = more expensive deploy, cheaper execution)
OPTIMIZER_RUNS=200

# Enable via-IR optimization (experimental)
VIA_IR=false

# Enable code splitting
ENABLE_CODE_SPLITTING=false

# ===============================================
# Testing Configuration
# ===============================================

# Test network timeout (milliseconds)
TEST_TIMEOUT=40000

# Enable parallel testing
PARALLEL_TESTS=false

# Test coverage threshold (percentage)
COVERAGE_THRESHOLD=90

# ===============================================
# Frontend Configuration
# ===============================================

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# API endpoint
API_ENDPOINT=http://localhost:8545

# WebSocket endpoint
WS_ENDPOINT=ws://localhost:8545

# Enable frontend caching
ENABLE_CACHING=true

# Cache duration (seconds)
CACHE_DURATION=3600

# ===============================================
# Monitoring & Analytics
# ===============================================

# Enable contract monitoring
ENABLE_MONITORING=true

# Monitoring service API key
# MONITORING_API_KEY=your-monitoring-key

# Enable error tracking
ENABLE_ERROR_TRACKING=true

# Error tracking service (e.g., Sentry)
# SENTRY_DSN=your-sentry-dsn

# Enable performance tracking
ENABLE_PERFORMANCE_TRACKING=true

# ===============================================
# Deployment Configuration
# ===============================================

# Auto-deploy after tests pass
AUTO_DEPLOY=false

# Verify contracts on Etherscan after deployment
AUTO_VERIFY=true

# Send deployment notifications
SEND_NOTIFICATIONS=false

# Notification webhook URL
# NOTIFICATION_WEBHOOK=https://hooks.slack.com/services/...

# ===============================================
# FHEVM Configuration (if using FHEVM)
# ===============================================

# FHEVM gateway URL
# FHEVM_GATEWAY_URL=https://gateway.fhevm.network

# FHEVM network ID
# FHEVM_NETWORK_ID=9000

# Enable FHEVM encryption
# ENABLE_FHEVM=true

# ===============================================
# Emergency Configuration
# ===============================================

# Emergency pause enabled
EMERGENCY_PAUSE_ENABLED=true

# Circuit breaker threshold (% of unusual activity)
CIRCUIT_BREAKER_THRESHOLD=80

# Emergency withdrawal address
# EMERGENCY_WITHDRAWAL_ADDRESS=0x...

# Incident response email
# INCIDENT_EMAIL=security@example.com

# ===============================================
# Backup & Recovery
# ===============================================

# Enable automatic backups
ENABLE_BACKUPS=true

# Backup interval (hours)
BACKUP_INTERVAL=24

# Backup storage location
# BACKUP_STORAGE=s3://your-bucket/backups

# Recovery mode enabled
RECOVERY_MODE=false

# ===============================================
# Development & Debug
# ===============================================

# Development mode (enables extra logging)
NODE_ENV=production

# Enable debug mode
DEBUG=false

# Verbose logging
VERBOSE=false

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable gas profiling
GAS_PROFILING=false

# ===============================================
# Security Best Practices Reminders
# ===============================================
# 1. NEVER commit .env file to Git
# 2. Use separate wallets for testnet and mainnet
# 3. Never use mainnet private keys on testnet
# 4. Keep your API keys secure and rotate regularly
# 5. Use hardware wallets for production deployments
# 6. Enable 2FA on all accounts
# 7. Regularly audit your security configuration
# 8. Keep all dependencies up to date
# 9. Monitor for suspicious activity
# 10. Have an incident response plan
# ===============================================
