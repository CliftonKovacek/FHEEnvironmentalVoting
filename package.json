{
  "name": "environmental-voting-fhevm",
  "version": "1.0.0",
  "description": "Fully Homomorphic Encrypted Environmental Voting System using FHEVM on Sepolia",
  "author": "Your Name",
  "license": "MIT",
  "keywords": [
    "fhevm",
    "blockchain",
    "voting",
    "privacy",
    "environmental",
    "ethereum",
    "sepolia",
    "testing",
    "ci-cd",
    "security",
    "performance"
  ],
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:unit": "hardhat test test/EnvironmentalVoting.test.js",
    "test:sepolia": "hardhat test test/EnvironmentalVoting.sepolia.test.js --network sepolia",
    "test:gas": "REPORT_GAS=true hardhat test",
    "test:all": "npm run test && npm run test:sepolia",
    "lint": "npm run lint:sol && npm run lint:js",
    "lint:sol": "solhint 'contracts/**/*.sol'",
    "lint:js": "eslint '**/*.{js,ts}'",
    "lint:fix": "npm run lint:sol:fix && npm run lint:js:fix",
    "lint:sol:fix": "solhint 'contracts/**/*.sol' --fix",
    "lint:js:fix": "eslint '**/*.{js,ts}' --fix",
    "format": "prettier --write '**/*.{js,ts,sol,json,md}'",
    "format:check": "prettier --check '**/*.{js,ts,sol,json,md}'",
    "deploy": "hardhat run scripts/deploy.js --network sepolia",
    "deploy:local": "hardhat run scripts/deploy.js --network localhost",
    "verify": "hardhat run scripts/verify.js --network sepolia",
    "interact": "hardhat run scripts/interact.js --network sepolia",
    "simulate": "hardhat run scripts/simulate.js --network sepolia",
    "node": "hardhat node",
    "clean": "hardhat clean",
    "size": "hardhat size-contracts",
    "coverage": "hardhat coverage",
    "gas-report": "REPORT_GAS=true hardhat test",
    "security": "npm audit && npm run lint:sol",
    "prepare": "husky install",
    "ci": "npm run lint && npm run format:check && npm run compile && npm run test && npm run coverage"
  },
  "dependencies": {
    "@fhevm/solidity": "^0.5.0",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.7",
    "@nomicfoundation/hardhat-ethers": "^3.0.6",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.11",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.8",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.16",
    "@types/mocha": "^10.0.7",
    "@types/node": "^20.14.11",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "chai": "^4.4.1",
    "eslint": "^8.57.0",
    "eslint-plugin-security": "^3.0.1",
    "ethers": "^6.13.1",
    "hardhat": "^2.22.6",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-gas-reporter": "^2.2.0",
    "husky": "^9.1.6",
    "mocha": "^10.7.3",
    "prettier": "^3.3.3",
    "prettier-plugin-solidity": "^1.4.1",
    "solhint": "^5.0.3",
    "solidity-coverage": "^0.8.12",
    "typechain": "^8.3.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
